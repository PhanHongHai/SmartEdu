                                            <li class="active"><a href="<%= ele.link%>"><%= ele.name %></a></li>
                                            <% } else{%>
                                                <li><a href="<%= ele.link%>"><%= ele.name %></a></li>
                                            <% }%>
                                            <% })} %>
                                        </ul>
                                    </div>
                                </div>
                                <div class="widget">
                                    <h5 class="widget-title line-bottom">Tin liên quan</h5>
                                    <div class="latest-posts">
                                        <% if(tinLQ !== null){ %>
                                        <% tinLQ.forEach(function(ele){ %>
                                        <article class="post media-post clearfix pb-0 mb-10">
                                            <a class="post-thumb"
                                                href="/tuyen-sinh/chi-tiet/<%= convertURL(ele.tenBV) %>.<%= ele._id %>"><img
                                                    src="/public/uploads/<%= ele.banner %>" alt=""></a>
                                            <div class="post-right">
                                                <h5 class="post-title mt-0"><a
                                                        href="/tuyen-sinh/chi-tiet/<%= convertURL(ele.tenBV) %>.<%= ele._id %>"><%= ele.tenBV %></a>
                                                </h5>
                                            </div>
                                        </article>
                                        <% })} %>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Footer -->
            <% include ../component/home/footer %>
            <% include ../component/home/script %>

        </div>
