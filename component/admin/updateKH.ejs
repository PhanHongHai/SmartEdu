<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title float-left">Cập nhật khóa học</h5>
                    <div class="">
                        <div class="card-body">
                            <% if(list) {%>
                            <% list.forEach(function(ele){ %>
                            <form action="/admin/khoa-hoc/loadUpdate/<%=ele._id%>" method="POST"
                                enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="col-form-label">Tên khóa học</label>
                                    <input type="text" class="form-control form-control-sm" name="tenKH"
                                        value="<%=ele.tenKH%>" required>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">Lĩnh vực</label>
                                    <select name="idCate" class="form-control" id="input-select">
                                        <% cate.forEach(function(val){ %>
                                        <% if(val.ten === ele.lv[0].ten){ %>
                                        <option value="<%=val._id%>" selected><%= val.ten %></option>
                                        <% } else{ %>
                                        <option value="<%=val._id%>"><%= val.ten %></option>
                                        <%}}) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="my-input">Giới thiệu</label>
                                    <textarea id="my-input" class="form-control" name="gioiThieu"
                                        rows="3"><%=ele.gioiThieu%></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="my-input">Ngày khai giảng </label>
                                    <input type="text" class="form-control form-control-sm" id="datepicker"
                                        name="ngayKhaiGiang" value="<%=ele.ngayKhaiGiang%>">
                                </div>
                                <div class="form-group">
                                        <label for="my-input">Học phí </label>
                                         <input type="number" class="form-control form-control-sm" name="hocPhi" value="<%=ele.hocPhi%>">
                                    </div>
                                <div class="form-group w-75">
                                    <label class="col-form-label">Ảnh</label>
                                    <div class="row">
                                        <div class="d-inline-block col-md-7">
                                            <img src="/public/uploads/<%=ele.banner%>" id="currentImg" alt=""
                                                width="200" height="100">
                                        </div>
                                        <div class="col-md-5">
                                            <input id="imgNew" style="margin-top: 14%;" type="file"
                                                class="form-control form-control-sm" name="banner">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">Nội dung</label>
                                    <textarea name="noiDung" id="updateNews" value=""><%=ele.noiDung%></textarea>
                                </div>

                                <div class="form-group float-right">
                                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                                    <a href="/admin/khoa-hoc" class="btn btn-danger">Hủy</a>
                                </div>
                            </form>
                            <%})} %>
                        </div>
                    </div>
                </div>
            </div>
        </div>