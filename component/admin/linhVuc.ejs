<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title float-left">Danh sách lĩnh vực</h3>
                    <div class="float-right">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAđ">
                            Thêm
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="modalAđ" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalScrollableTitle">Thêm mới</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="POST" action="/admin/linh-vuc" id="addCate">
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Tên lĩnh vực
                                                </label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="ten">
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Xác Nhận</button>
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Thoát</button>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">


                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Tên lĩnh vực</th>
                                    <th scope="col">Xử lý</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(list){
                                        let i=1;
                                    list.forEach(function(ele){
                                    %>
                                <tr>
                                    <th scope="row"><%= i %></th>
                                    <td><%= ele.ten %></td>
                                    <td>
                                        <i class="fas fa-edit pr-3 " data-toggle="modal" data-target="#modalEdit<%=i%>"
                                            style="cursor:pointer;"></i>
                                        <i class="fas fa-trash-alt" style="cursor:pointer;" data-toggle="modal"
                                            data-target="#deleteNew"></i>
                                        <div class="modal fade" id="deleteNew" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học
                                                        </h5>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h5 class="modal-title" id="exampleModalLabel">Bạn có muốn xóa
                                                            không ?
                                                        </h5>
                                                    </div>

                                                    <div class="modal-footer">
                                                        <a href="/admin/linh-vuc/delete/<%= ele._id %>"
                                                            class="btn btn-primary">Xác nhận</a>
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Hủy</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <!-- Button trigger modal -->
                                    <!-- Modal -->
                                    <div class="modal fade " id="modalEdit<%= i %>" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-scrollable" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalScrollableTitle">Sửa Thông
                                                        tin lĩnh vực
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/admin/linh-vuc/update/<%= ele._id%>" method="POST" id="editCate">
                                                        <div class="form-group">
                                                            <label for="inputSmall" class="col-form-label">Tên lĩnh vực
                                                            </label>
                                                            <input type="text" class="form-control form-control-sm ten"
                                                                value="<%= ele.ten %>" name="ten">
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-primary">Xác
                                                                Nhận</button>
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Thoát</button>
                                                        </div>
                                                    </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <% i++; })} %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>